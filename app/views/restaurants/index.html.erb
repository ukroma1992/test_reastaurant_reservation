<% if @restaurants.blank? %>
  <h2>You dont have restaurants</h2>
  <br>
  <%= link_to 'Create Restaurant', new_restaurant_path, class: "btn btn-primary" %> 
<% else %>
  <h1 class="text-center">Listing Restaurants</h1>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr class="text-center">
          <th>Name</th>
          <th>Address</th>
          <th>Open - Close</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr  class="text-center">
            <td><%= restaurant.name %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.open.strftime("%H:%M") %> - <%= restaurant.close.strftime("%H:%M") %></td>
            <td><%= link_to "tables", tables_path(:restaurant_id => restaurant.id), class: "btn btn-info" %></td>
            <td><%= link_to "edit restaurant", edit_restaurant_path(restaurant), class: "btn btn-info" %></td> 
            <td><%= link_to "delete restaurant", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-block btn-primary" %>
<% end %>